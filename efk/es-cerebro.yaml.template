apiVersion: v1
kind: Service
metadata:
  name: cerebro
  namespace: ${component.efk.namespace}
  labels:
    provider: agilestacks.com
    project: logs
    qualifier: cerebro
  annotations:
    agilestacks.com/stack-comoponent: Cerebro
spec:
  ports:
  - port: 9000
    protocol: TCP
    targetPort: ui
  selector:
    provider: agilestacks.com
    project: logs
    qualifier: cerebro
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: cerebro
  namespace: ${component.efk.namespace}
  labels:
    provider: agilestacks.com
    project: logs
    qualifier: cerebro
spec:
  rules:
  - host: cerebro.${component.ingress.ssoFqdn}
    http:
      paths:
      - path: /
        backend:
          serviceName: cerebro
          servicePort: 9000

---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: cerebro
  namespace: ${component.efk.namespace}
  labels:
    provider: agilestacks.com
    project: logs
    qualifier: cerebro
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        provider: agilestacks.com
        project: logs
        qualifier: cerebro
    spec:
      containers:
      - name: cerebro
        image: agilestacks/cerebro:0.8.2
        imagePullPolicy: Always
        readinessProbe:
          httpGet:
            path: /
            port: 9000
          timeoutSeconds: 1
          successThreshold: 1
        command: ["bin/cerebro"]
        args: ["-Dconfig.file=/etc/cerebro/cerebro.conf"]
        env:
          - name: ELASTICSEARCH_URL
            valueFrom:
              configMapKeyRef:
                name: es-env
                key: es-client-endpoint
          - name: ELASTICSEARCH_USERNAME
            valueFrom:
              secretKeyRef:
                name: es-secrets
                key: es-username
          - name: ELASTICSEARCH_PASSWORD
            valueFrom:
              secretKeyRef:
                name: es-secrets
                key: es-password
        ports:
        - containerPort: 9000
          name: ui
          protocol: TCP
        volumeMounts:
        - name: cerebro-config
          mountPath: /etc/cerebro
      volumes:
      - name: cerebro-config
        configMap:
          name: cerebro-config
