apiVersion: v1
kind: PersistentVolume
metadata:
  name: jenkins-nfs-vol
  namespace: ${component.jenkins.namespace}
  labels:
    provider:  agilestacks.com
    project:   jenkins
    storage:   nfs
    qualifier: workspace
spec:
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteMany
  nfs:
    server: ${nfs.server}
    path: "/"
  mountOptions:
    - hard
    - nfsvers=4.1
  persistentVolumeReclaimPolicy: "Retain"
