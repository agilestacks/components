kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: workspace-volume
  namespace: ${component.jenkins.namespace}
  labels:
    provider:  agilestacks.com
    project:   jenkins
    qualifier: workspace
spec:
  selector:
    matchLabels:
      provider:  agilestacks.com
      project:   jenkins
      qualifier: workspace
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: 2Gi
