expose:
  clusterIP:
    name: ${component.harbor.name}
    ports:
      httpPort: 80
      httpsPort: 443
      notaryPort: 4443
  nodePort:
    name: harbor
    ports:
      http:
        port: 80
        nodePort: 30002
      https:
        port: 443
        nodePort: 30003
      notary:
        port: 4443
        nodePort: 30004

imagePullPolicy: IfNotPresent

logLevel: debug

persistence:
  persistentVolumeClaim:
    chartmuseum:
      existingClaim: ""
      storageClass: "${component.harbor.storageClass}"
      subPath: ""
      accessMode: ReadWriteOnce
      size: 5Gi
    jobservice:
      existingClaim: ""
      storageClass: "${component.harbor.storageClass}"
      subPath: ""
      accessMode: ReadWriteOnce
      size: 1Gi
    database:
      existingClaim: ""
      storageClass: "${component.harbor.storageClass}"
      subPath: ""
      accessMode: ReadWriteOnce
      size: 1Gi
    redis:
      existingClaim: ""
      storageClass: "${component.harbor.storageClass}"
      subPath: ""
      accessMode: ReadWriteOnce
      size: 1Gi

# If expose the service via "ingress", the Nginx will not be used
nginx:
  image:
    repository: goharbor/nginx-photon
    tag: ${component.harbor.version}-dev
  replicas: 1
  nodeSelector: {}
  tolerations: []
  affinity: {}
  podAnnotations: {}

portal:
  image:
    repository: goharbor/harbor-portal
    tag: ${component.harbor.version}
  replicas: 1
# resources:
