    configureCertmanager: false
    annotations:
      kubernetes.io.tls-acme: true
      cert-manager.io/cluster-issuer: ${component.gitlab.defaultIssuerName}
    enabled: true
    tls:
      enabled: true
      secretName: gitlab-tls

