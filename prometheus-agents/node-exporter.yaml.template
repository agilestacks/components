kind: DaemonSet
apiVersion: apps/v1
metadata:
  name: node-exporter
  namespace: ${component.prometheusAgents.namespace}
spec:
  selector:
    matchLabels:
      daemon: node-exporter
  template:
    metadata:
      name: node-exporter
      labels:
        daemon: node-exporter
        k8s-app: node-exporter
    spec:
      volumes:
      - name: proc
        hostPath:
          path: /proc
      - name: sys
        hostPath:
          path: /sys
      containers:
      - name: node-exporter
        image: quay.io/prometheus/node-exporter:${component.prometheusAgents.nodeExporter.version}
        args:
          - --path.procfs=/proc_host
          - --path.sysfs=/host_sys
        ports:
          - name: node-exporter
            hostPort: 9100
            containerPort: 9100
        volumeMounts:
          - name: sys
            readOnly: true
            mountPath: /host_sys
          - name: proc
            readOnly: true
            mountPath: /proc_host
        imagePullPolicy: IfNotPresent
      restartPolicy: Always
      hostNetwork: true
      hostPID: true
