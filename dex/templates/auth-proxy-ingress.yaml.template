apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  annotations:
  name: auth-proxy-ingress
  namespace: ${component.dex.namespace}
spec:
  tls:
    - hosts:
        - kubernetes.${component.ingress.fqdn}
        - jenkins.${component.ingress.fqdn}
      secretName: oauth-ingress-tls-secret
  rules:
  - host: kubernetes.${component.ingress.fqdn}
    http:
      paths:
      - path: /
        backend:
          serviceName: monitoring-auth-dashboard
          servicePort: 4180
  - host: jenkins.${component.ingress.fqdn}
    http:
      paths:
      - path: /
        backend:
          serviceName: jenkins-auth-svc
          servicePort: 4180